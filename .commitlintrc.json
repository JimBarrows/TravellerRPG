{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "wip"
      ]
    ],
    "subject-case": [2, "never", ["sentence-case", "start-case", "pascal-case", "upper-case"]],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"],
    "scope-enum": [
      1,
      "always",
      [
        "api",
        "auth",
        "campaign",
        "character",
        "combat",
        "database",
        "deps",
        "dice",
        "infrastructure",
        "starship",
        "taskmaster",
        "trade",
        "ui",
        "world"
      ]
    ]
  }
}