# Database Configuration
DATABASE_URL="postgresql://dbadmin:password@localhost:5432/travellerrpg?schema=public"

# Development Database (for local testing)
DEV_DATABASE_URL="postgresql://dbadmin:password@localhost:5432/travellerrpg_dev?schema=public"

# Test Database
TEST_DATABASE_URL="postgresql://dbadmin:password@localhost:5432/travellerrpg_test?schema=public"

# AWS RDS Configuration (production)
RDS_HOSTNAME="your-rds-endpoint.amazonaws.com"
RDS_PORT="5432"
RDS_DB_NAME="travellerrpg"
RDS_USERNAME="dbadmin"
RDS_PASSWORD="your-secure-password"

# Backup Configuration
BACKUP_S3_BUCKET="travellerrpg-db-backups"
BACKUP_RETENTION_DAYS="30"

# Monitoring
ENABLE_QUERY_LOGGING="true"
SLOW_QUERY_THRESHOLD="1000"