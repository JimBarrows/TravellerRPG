{
  "name": "@travellerrpg/database",
  "version": "1.0.0",
  "description": "Traveller RPG Database Schema and Migration Management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:standalone": "jest --config jest.standalone.config.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:validate": "prisma validate",
    "deploy:dev": "node scripts/deploy-migrations.js deploy development",
    "deploy:prod": "node scripts/deploy-migrations.js deploy production",
    "deploy:test": "node scripts/deploy-migrations.js deploy test",
    "seed:dev": "node scripts/deploy-migrations.js seed development",
    "seed:prod": "node scripts/deploy-migrations.js seed production",
    "seed:test": "node scripts/deploy-migrations.js seed test",
    "deploy:full:dev": "node scripts/deploy-migrations.js full development",
    "deploy:full:prod": "node scripts/deploy-migrations.js full production",
    "deploy:full:test": "node scripts/deploy-migrations.js full test",
    "reset:dev": "node scripts/deploy-migrations.js reset development",
    "reset:test": "node scripts/deploy-migrations.js reset test",
    "deploy:complete:dev": "node scripts/deploy-full.js deploy development --full",
    "deploy:complete:prod": "node scripts/deploy-full.js deploy production --full --confirm-production",
    "deploy:complete:test": "node scripts/deploy-full.js deploy test --full",
    "deploy:schema:dev": "node scripts/deploy-full.js schema-only development",
    "deploy:schema:prod": "node scripts/deploy-full.js schema-only production --confirm-production",
    "deploy:security": "node scripts/deploy-full.js security-only development",
    "deploy:optimization": "node scripts/deploy-full.js optimization-only development",
    "validate:dev": "node scripts/deploy-full.js validate development",
    "validate:prod": "node scripts/deploy-full.js validate production",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prisma": "^5.16.1",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "traveller",
    "rpg",
    "database",
    "postgresql",
    "prisma",
    "migrations"
  ],
  "author": "TravellerRPG Team",
  "license": "MIT"
}